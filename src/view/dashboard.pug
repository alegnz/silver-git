div#header
  input#txtPath(type="text")/
  button#btnChangePath.hidden Change path
  button#btnSavePath Save path

div#dashboard-main
  div#left-bar
    // BRANCHES SECTION
    div#branches.section
      p.section-title Branches
      div.section-content
        div.accordion-header.collapsed
          i.fas.fa-desktop/ Local
        ul#localBranches.accordion-body
          
        div.accordion-header.collapsed
          i.fas.fa-cloud/ Remote
        div#remoteBranches.accordion-body
          
        div.accordion-header.collapsed
          i.fa.fa-tags/ Tags
        ul#tags.accordion-body
          
    // STASH section
    div#stash.section
      p.section-title Stash
      div.section-content
    
    // COMMIT SECTION
    div#commit.section
      p.section-title Commit
      div.section-content
        input#txtCommitTitle(type="text" placeholder="Commit summary")/
        textarea#txtCommitMessage(type="text" placeholder="Commit description")/
        button#btnCommit.btn.btn-primary Commit
    
  div#center
    div#files
      // WIP SECTION
      div.section.file-list
        p.section-title Work in progress
        a#btn-stage-all.btn.btn-success Stage all
        div#wip.section-content
          
      // STAGING SECTION
      div.section.file-list
        p.section-title Staging area
        a#btn-unstage-all.btn.btn-danger Unstage all
        div#staging.section-content
    
    // DIFF SECTION
    div#diff.section
      div.section-title Diff section
      div.section-content
    
    // LOG SECTION
    div#log.section.hidden
      div.section-title Log
      div.section-content
        h1 This is the log section
      
div#terminal.hidden
  div#terminal-header
    span Terminal
    i#btnMinimizeTerminal.far.fa-window-minimize
    
  div.terminal-body alejandro@alePC:~/workspace/silver-git$

div#footer
  div#open-terminal
    i.fas.fa-terminal
  div#current-branch
    i.fas.fa-code-branch
    span

script(src="scripts/dashboard.js")
